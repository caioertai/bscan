%main.grid-container
  %h1== Similarity for #{params[:name_to_match]}

  %table
    %thead.sticky
      %th Id
      %th Usage
      %th Name
      %th
      %th
    %tbody
      - @close_matches.each do |match|
        %tr
          %td= match.obj1.id
          %td= match.obj1.products.count
          %td= match.obj1.name
          %td== Overall: #{match.rating.round} | Lev: #{match.lev_rating.round} | Pair: #{match.pair_rating.round}#{' | Inclusion' if match.inclusion?}
          %td.text-right= link_to 'Show', match.obj1
