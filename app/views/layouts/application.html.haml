!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bscan
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .top-bar
      .top-bar-left
        %ul.menu
          %li.menu-text BScan
          %li= link_to 'Products', products_path
          %li= link_to 'Anomalies', anomalies_path
      .top-bar-right
        %ul.menu
          %li
            = form_tag "/search_by_ean", method: 'get' do
              = text_field_tag :ean, params[:ean], type: 'search', placeholder: 'Search by EAN', class: 'input-group-field'
          %li
            = form_tag "/search_by_name", method: 'get' do
              = text_field_tag :name, params[:name], type: 'search', placeholder: 'Search by Name', class: 'input-group-field'

    .grid-container.padded= yield
