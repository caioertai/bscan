%table
  %thead.sticky
    %th Name
    %th EAN
    %th Brand
    %th Factory
    %th Ingredients
    %th
  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.ean
        %td= product.brand
        %td= product.factory
        %td= product.ingredients.empty? ? '' : 'Yes'
        %td.text-right
          = link_to 'Source', product.url
          = link_to 'Show', product
          = link_to 'Edit', edit_product_path(product)
          = link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
